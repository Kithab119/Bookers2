<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'users/list', users: @users %>

    <div class="col-md-8 offset-md-1">

      <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td></td>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
                <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-cofirm" => "本当に消しますか？" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>

  </div>
</div>