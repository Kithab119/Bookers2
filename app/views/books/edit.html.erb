<div class="container">
  <div class="row">
    <div class="mx-auto">

      <h3 class="mt-3">Editing Book</h3>

        <%= form_with model: @book do |f| %>

          <div class="form-group">
            <p>Title</p>
            <%= f.text_field :title %>
          </div>

          <div class="form-group">
            <p>Opinion</p>
            <%= f.text_area :body %>
          </div>

          <div class="form-group">
            <%= f.submit 'Update Book', class: "btn btn-success" %>
          </div>

        <% end %>

        <%= link_to 'Show', book_path(@book.id) %>|<%= link_to 'Back', books_path %>

    </div>
  </div>
</div>

<%= render 'users/footer' %>