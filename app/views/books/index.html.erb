<% if @books.errors.any? %>
  <%= @books.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @books.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'users/list', user: current_user %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table-hover">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user.id) do %>
                    <%= image_tag book.user.get_profile_image(70, 70) %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book.id)  %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

  </div>
</div>

<%= render 'users/footer' %>