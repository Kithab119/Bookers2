<div class="col-md-3">

  <h3>User info</h3>

  <table>
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
      </tr>
      <tr>
        <th>introduction</th>
      </tr>
    </tbody>
  </table>


  <h3>New book</h3>

  <%= form_with model: Book.new do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

  <% end %>

</div>