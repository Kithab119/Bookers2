<div class="col-md-3">

  <h3>User info</h3>

    <table class="table">
      <tbody>
        <tr>
          <%= image_tag user.get_profile_image %>
        </tr>
        <tr>
          <th>name</th><th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
        </tr>
      </tbody>
    </table>


  <h3 class="mt-3">New book</h3>

    <%= form_with model: Book.new do |f| %>

      <div class="form-group">
        <p>Title</p>
        <%= f.text_field :title %>
      </div>

      <div class="form-group">
        <p>Opinion</p>
        <%= f.text_area :body %>
      </div>

      <div class="form-group">
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      </div>

    <% end %>

</div>