<h3 class="mt-3">User info</h3>

    <%= form_with model: @user do |f| %>

      <div class="form-group">
        <p>Name</p>
        <%= f.text_field :name %>
      </div>

      <div class="form-group">
        <p>Image</p>
        <%= f.file_field :image, accept: "image/*" %>
      </div>

      <div class="form-group">
        <p>Introduction</p>
        <%= f.text_area :introduction %>
      </div>

      <div class="form-group">
        <%= f.submit 'Update User', class: "btn btn-secondary" %>
      </div>

    <% end %>

<%= render 'footer' %>