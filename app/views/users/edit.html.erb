<div class="container">
  <div class="row">
    <div class="mx-auto">

      <h3 class="mt-3">User info</h3>

      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

          <%= form_with model: @user do |f| %>

            <div class="form-group">
              <p>Name</p>
              <%= f.text_field :name %>
            </div>

            <div class="form-group">
              <p>Image</p>
              <%= f.file_field :profile_image, accept: "image/*" %>
            </div>

            <div class="form-group">
              <p>Introduction</p>
              <%= f.text_area :introduction %>
            </div>

            <div class="form-group">
              <%= f.submit 'Update User', class: "btn btn-secondary" %>
            </div>

          <% end %>

    </div>
  </div>
</div>

<%= render 'footer' %>